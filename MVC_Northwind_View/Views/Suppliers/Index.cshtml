@model List<Supplier>

@{
    ViewData["Title"] = "Suppliers";
}

<h1>Suppliers</h1>
<hr />

<div class="mb-3">
    <a asp-controller="Suppliers" asp-action="Create" class="btn btn-outline-success">Create</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Company Name</th>
            <th>Contact Name</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.SupplierId</td>
                <td>@item.CompanyName</td>
                <td>@item.ContactName</td>
                <td>@item.Phone</td>
                <td>
                    <a asp-controller="Suppliers" asp-action="Update" asp-route-id="@item.SupplierId" class="btn btn-outline-primary">Update</a>
                    <a asp-controller="Suppliers" asp-action="Delete" asp-route-id="@item.SupplierId"
                       class="btn btn-outline-danger"
                       onclick="return confirm('Are you sure you want to delete this supplier?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
