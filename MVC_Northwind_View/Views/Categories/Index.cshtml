@model List<Category>

@{
    ViewData["Title"] = "Categories";
}

<h1>Categories</h1>
<hr />

<div class="mb-3">
    <a asp-controller="Categories" asp-action="Create" class="btn btn-outline-success">Create</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Category Name</th>
            <th>Description</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryId</td>
                <td>@item.CategoryName</td>
                <td>@item.Description</td>
                <td>
                    <a asp-controller="Categories" asp-action="Update" asp-route-id="@item.CategoryId" class="btn btn-outline-primary">Update</a>
                    <a asp-controller="Categories" asp-action="Delete" asp-route-id="@item.CategoryId"
                       class="btn btn-outline-danger"
                       onclick="return confirm('Are you sure you want to delete this category?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
