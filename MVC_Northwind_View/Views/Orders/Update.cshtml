@model Order

<h1>Order</h1>
<hr />
<h5>Update</h5>

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Orders" asp-action="Update" method="post">
            <input type="hidden" asp-for="OrderId" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Customer -->
            <div class="form-group mt-3">
                <label asp-for="CustomerId" class="control-label"></label>
                <select asp-for="CustomerId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Customers, "CustomerId", "CompanyName", Model.CustomerId))">
                </select>
                <span asp-validation-for="CustomerId" class="text-danger"></span>
            </div>

            <!-- Employee -->
            <div class="form-group mt-3">
                <label asp-for="EmployeeId" class="control-label"></label>
                <select asp-for="EmployeeId" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Employees, "EmployeeId", "FirstName", Model.EmployeeId))">
                </select>
                <span asp-validation-for="EmployeeId" class="text-danger"></span>
            </div>

            <!-- Shipper -->
            <div class="form-group mt-3">
                <label asp-for="ShipVia" class="control-label"></label>
                <select asp-for="ShipVia" class="form-control"
                        asp-items="@(new SelectList(ViewBag.Shippers, "ShipperId", "CompanyName", Model.ShipVia))">
                </select>
                <span asp-validation-for="ShipVia" class="text-danger"></span>
            </div>

            <!-- Order Date -->
            <div class="form-group mt-3">
                <label asp-for="OrderDate" class="control-label"></label>
                <input asp-for="OrderDate" type="date" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>

            <!-- Freight -->
            <div class="form-group mt-3">
                <label asp-for="Freight" class="control-label"></label>
                <input asp-for="Freight" class="form-control" />
                <span asp-validation-for="Freight" class="text-danger"></span>
            </div>

            <!-- Submit -->
            <div class="form-group mt-3">
                <input type="submit" value="Update" class="btn btn-outline-success" />
                <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-info">Back to List</a>
            </div>
        </form>
    </div>
</div>
