@model List<Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>
<hr />

<div class="mb-3">
    <a asp-controller="Orders" asp-action="Create" class="btn btn-outline-success">Create</a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Customer</th>
            <th>Employee</th>
            <th>Shipper</th>
            <th>Order Date</th>
            <th>Freight</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.Customer?.CompanyName</td>
                <td>@(item.Employee != null ? item.Employee.FirstName + " " + item.Employee.LastName : "")</td>
                <td>@item.ShipViaNavigation?.CompanyName</td>
                <td>@item.OrderDate?.ToShortDateString()</td>
                <td>@item.Freight</td>
                <td>
                    <a asp-controller="Orders" asp-action="Update" asp-route-id="@item.OrderId" class="btn btn-outline-primary">Update</a>
                    <a asp-controller="Orders" asp-action="Delete" asp-route-id="@item.OrderId"
                       class="btn btn-outline-danger"
                       onclick="return confirm('Are you sure you want to delete this order?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
