@model List<Customer>

@{
    ViewData["Title"] = "Customers";
}

<h1>Customers</h1>
<hr />

<div class="mb-3">
    <a asp-controller="Customers" asp-action="Create" class="btn btn-outline-success">
        Create
    </a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>Customer ID</th>
            <th>Company Name</th>
            <th>Contact Name</th>
            <th>City</th>
            <th>Country</th>
            <th>Phone</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CustomerId</td>
                <td>@item.CompanyName</td>
                <td>@item.ContactName</td>
                <td>@item.City</td>
                <td>@item.Country</td>
                <td>@item.Phone</td>
                <td>
                    <a asp-controller="Customers" asp-action="Update" asp-route-id="@item.CustomerId" class="btn btn-outline-primary">Update</a>
                    <a asp-controller="Customers" asp-action="Delete" asp-route-id="@item.CustomerId"
                       class="btn btn-outline-danger"
                       onclick="return confirm('Are you sure you want to delete this customer?');">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
