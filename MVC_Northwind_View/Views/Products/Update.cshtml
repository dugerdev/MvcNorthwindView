@model Product

@{
    ViewData["Title"] = "Update Product";
}

<h1>Update Product</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Products" asp-action="Update" method="post">
            <input type="hidden" asp-for="ProductId" />

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <!-- Product Name -->
            <div class="form-group mt-3">
                <label asp-for="ProductName" class="control-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <!-- Category -->
            <div class="form-group mt-3">
                <label asp-for="CategoryId" class="control-label"></label>
                <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <!-- Supplier -->
            <div class="form-group mt-3">
                <label asp-for="SupplierId" class="control-label"></label>
                <select asp-for="SupplierId" asp-items="ViewBag.Suppliers" class="form-control"></select>
                <span asp-validation-for="SupplierId" class="text-danger"></span>
            </div>

            <!-- Quantity Per Unit -->
            <div class="form-group mt-3">
                <label asp-for="QuantityPerUnit" class="control-label"></label>
                <input asp-for="QuantityPerUnit" class="form-control" />
                <span asp-validation-for="QuantityPerUnit" class="text-danger"></span>
            </div>

            <!-- Unit Price -->
            <div class="form-group mt-3">
                <label asp-for="UnitPrice" class="control-label"></label>
                <input asp-for="UnitPrice" class="form-control" />
                <span asp-validation-for="UnitPrice" class="text-danger"></span>
            </div>

            <!-- Units In Stock -->
            <div class="form-group mt-3">
                <label asp-for="UnitsInStock" class="control-label"></label>
                <input asp-for="UnitsInStock" class="form-control" />
                <span asp-validation-for="UnitsInStock" class="text-danger"></span>
            </div>

            <!-- Units On Order -->
            <div class="form-group mt-3">
                <label asp-for="UnitsOnOrder" class="control-label"></label>
                <input asp-for="UnitsOnOrder" class="form-control" />
                <span asp-validation-for="UnitsOnOrder" class="text-danger"></span>
            </div>

            <!-- Reorder Level -->
            <div class="form-group mt-3">
                <label asp-for="ReorderLevel" class="control-label"></label>
                <input asp-for="ReorderLevel" class="form-control" />
                <span asp-validation-for="ReorderLevel" class="text-danger"></span>
            </div>

            <!-- Discontinued -->
            <div class="form-group mt-3 form-check">
                <input asp-for="Discontinued" class="form-check-input" type="checkbox" />
                <label asp-for="Discontinued" class="form-check-label"></label>
            </div>

            <!-- Buttons -->
            <div class="form-group mt-3">
                <input type="submit" value="Update" class="btn btn-outline-success" />
                <a asp-controller="Products" asp-action="Index" class="btn btn-outline-info">Back to List</a>
            </div>
        </form>
    </div>
</div>
