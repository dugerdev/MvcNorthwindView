@model List<Product>

@{
    ViewData["Title"] = "Products";
}

<h1>Products</h1>
<hr />

<div class="mb-3">
    <a asp-controller="Products" asp-action="Create" class="btn btn-outline-success">
        Create
    </a>
</div>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Product Name</th>
            <th>Category</th>
            <th>Supplier</th>
            <th>Quantity Per Unit</th>
            <th>Unit Price</th>
            <th>Units In Stock</th>
            <th>Discontinued</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.ProductName</td>
                <td>@item.Category?.CategoryName</td>
                <td>@item.Supplier?.CompanyName</td>
                <td>@item.QuantityPerUnit</td>
                <td>@item.UnitPrice</td>
                <td>@item.UnitsInStock</td>
                <td>@(item.Discontinued ? "Yes" : "No")</td>
                <td>
                    <a asp-controller="Products" asp-action="Update" asp-route-id="@item.ProductId"
                       class="btn btn-outline-primary">Update</a>
                    <a asp-controller="Products" asp-action="Delete" asp-route-id="@item.ProductId"
                       class="btn btn-outline-danger"
                       onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
